# LISIS Admin Security Configuration
# Gerado automaticamente em 2025-10-09 13:31:21

# Bloquear acesso a arquivos sensíveis
<FilesMatch "\.(sql|log|txt|md|json)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Permitir acesso a uploads (imagens)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Permitir acesso direto a arquivos de imagem em uploads/
    RewriteCond %{REQUEST_URI} ^/admin/uploads/.*\.(jpg|jpeg|png|gif|webp|svg)$ [NC]
    RewriteRule ^ - [L]
</IfModule>

# Bloquear listagem de diretórios
Options -Indexes

# Proteção contra hotlinking de imagens (desabilitado para desenvolvimento)
# RewriteEngine on
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?seudominio.com [NC]
# RewriteCond %{HTTP_REFERER} !^http(s)?://localhost [NC]
# RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]

# Headers de segurança
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>